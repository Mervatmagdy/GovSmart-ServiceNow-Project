        <payload>&lt;?xml version="1.0" encoding="UTF-8"?&gt;&lt;sp_widget&gt;&lt;category&gt;custom&lt;/category&gt;&lt;client_script&gt;&lt;![CDATA[api.controller = function($scope, $http, $timeout, cabrillo) {
    /* widget controller */
    var c = this;
    c.isNative = cabrillo.isNative() &amp;&amp; c.data.isMEE;
    $scope.m = $scope.data.msgs;

    displayCabrilloElements();

    c.cancel = function() {
        removeCabrilloElements();
        $rootScope.$broadcast("$sp.service_catalog.save.cancel");
    }

    c.save = function() {
        if (!c.data.draftName || c.data.draftName.length &gt; 200) {
            var errMsg = !c.data.draftName ? $scope.m.mandatoryMessage : $scope.m.maxLengthExceededMsg;
            if (c.isNative)
                cabrillo.message.showMessage(cabrillo.message.ERROR_MESSAGE_STYLE, errMsg);
            else
                c.errorMessage = errMsg;
            return;
        }

        removeCabrilloElements();
        $rootScope.$broadcast('$sp.service_catalog.save.submitted', {
            draft_name: c.data.draftName
        });
    }

    function removeCabrilloElements() {
        if (c.isNative) {
            cabrillo.viewLayout.setTitle(c.oldTitle);
            cabrillo.viewLayout.setNavigationBarButtons();
            cabrillo.viewLayout.setBottomButtons();
        }
    }

    function displayCabrilloElements() {
        if (c.isNative) {
            if (typeof cabrillo.viewLayout.getTitle == 'function') {
                cabrillo.viewLayout.getTitle().then(function(title) {
                    c.oldTitle = title;
                    cabrillo.viewLayout.setTitle($scope.m.saveDraft);
                });
            }

            cabrillo.viewLayout.hideBackButton();

            cabrillo.viewLayout.setNavigationBarButtons([{
                title: $scope.m.cancel,
                enabled: true
            }], function() {
                c.cancel();
            });

            var buttons = [{
                title: $scope.m.saveDraft,
                enabled: true,
                backgroundColor: $scope.data.sys_properties.isPolaris == "true" ? null : $scope.data.sys_properties.mobileNativeColor,
                textColor: $scope.data.sys_properties.isPolaris == "true" ? null : '#FFFFFF'
            }];

            cabrillo.viewLayout.setBottomButtons(buttons, function() {
                c.save();
            });
        }
    }
};]]&gt;&lt;/client_script&gt;&lt;controller_as&gt;c&lt;/controller_as&gt;&lt;css/&gt;&lt;data_table&gt;sp_instance&lt;/data_table&gt;&lt;demo_data/&gt;&lt;description/&gt;&lt;docs/&gt;&lt;field_list/&gt;&lt;has_preview&gt;false&lt;/has_preview&gt;&lt;id&gt;sc-item-save&lt;/id&gt;&lt;internal&gt;false&lt;/internal&gt;&lt;link&gt;&lt;![CDATA[function link(scope, element, attrs, controller) {  }]]&gt;&lt;/link&gt;&lt;name&gt;Catalog item save&lt;/name&gt;&lt;option_schema/&gt;&lt;public&gt;true&lt;/public&gt;&lt;roles/&gt;&lt;script&gt;&lt;![CDATA[(function() {
    data.isMEE = options.native_mobile == 'true';
    data.draftName = options.draftName;
    data.modalMessage = options.message;
	data.modalInfoMessage = options.infoMessage;

    var m = data.msgs = {};
    m.saveDraft = gs.getMessage("Save draft");
    m.closeModal = gs.getMessage("Close modal");
    m.cancel = gs.getMessage("Cancel");
    m.save = gs.getMessage("Save");
    m.label = gs.getMessage("Save draft as");
    m.maxLengthExceededMsg = gs.getMessage("Draft Item name should not exceed 200 characters.");
    m.mandatoryMessage = gs.getMessage("Draft Item name should not be empty.");

    data.sys_properties = {
        mobileNativeColor: gs.getProperty("glide.sc.mobile.primary_color", "#1f8476"),
        isPolaris: gs.getProperty("glide.ui.polaris.experience", "false")
    };

})();]]&gt;&lt;/script&gt;&lt;servicenow&gt;true&lt;/servicenow&gt;&lt;sys_class_name&gt;sp_widget&lt;/sys_class_name&gt;&lt;sys_created_by&gt;admin&lt;/sys_created_by&gt;&lt;sys_created_on&gt;2023-08-22 03:01:54&lt;/sys_created_on&gt;&lt;sys_id&gt;2654147577303110121e8f1a5b5a9990&lt;/sys_id&gt;&lt;sys_mod_count&gt;3&lt;/sys_mod_count&gt;&lt;sys_name&gt;Catalog item save&lt;/sys_name&gt;&lt;sys_package display_value="Service Portal - Service Catalog (do not activate...see plugin description)" source="com.glide.service-portal.service-catalog"&gt;f152659d30643210559066cad9e252c4&lt;/sys_package&gt;&lt;sys_policy/&gt;&lt;sys_scope display_value="Global"&gt;global&lt;/sys_scope&gt;&lt;sys_update_name&gt;sp_widget_2654147577303110121e8f1a5b5a9990&lt;/sys_update_name&gt;&lt;sys_updated_by&gt;admin&lt;/sys_updated_by&gt;&lt;sys_updated_on&gt;2023-08-31 05:05:21&lt;/sys_updated_on&gt;&lt;template&gt;&lt;![CDATA[&lt;div id="sc_cat_item_save" ng-class="{'panel panel-default': !c.isNative}"&gt;
   &lt;div ng-if="::!c.isNative" class="modal-header"&gt;
      &lt;button type="button" class="close pull-right" ng-click="c.cancel()" data-toggle="tooltip" data-placement="bottom" title="{{m.closeModal}}" aria-label="{{m.closeModal}}" role="button" autofocus&gt;Ã—&lt;/button&gt;
      &lt;h2 class="modal-title h4"&gt;{{m.saveDraft}}&lt;/h2&gt;
   &lt;/div&gt; 
   &lt;div class="modal-body"&gt;
     &lt;p ng-if="::(c.data.modalInfoMessage &amp;&amp; !c.isNative)" class="alert alert-info" role="alert"&gt;{{c.data.modalInfoMessage}}&lt;/p&gt;
     &lt;p ng-bind-html="::c.data.modalMessage"&gt;&lt;/p&gt;
     &lt;p ng-if="::(c.errorMessage &amp;&amp; !c.isNative)" class="alert alert-danger" role="alert"&gt;{{c.errorMessage}}&lt;/p&gt;
      &lt;form&gt;
