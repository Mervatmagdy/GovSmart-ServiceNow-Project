            &lt;label for="draft_item_name" &gt;&lt;span class="field-decorations"&gt;&lt;span class="fa fa-asterisk mandatory sp-field-label-padding" title="Required"&gt;&lt;/span&gt;{{m.label}}&lt;/span&gt;&lt;/label&gt;
            &lt;input sn-focus="true" ng-model="c.data.draftName" id="draft_item_name" type="text" class="form-control" required="true" &gt;
         &lt;/div&gt;
      &lt;/form&gt;
      &lt;div ng-if="::!c.isNative" class="modal-footer"&gt;
         &lt;button  class="btn btn-default" ng-click="c.cancel()" &gt;{{m.cancel}}&lt;/button&gt;
         &lt;button  class="btn btn-default  btn-primary" ng-click="c.save()" ng-disabled="!c.data.draftName"&gt;{{m.save}}&lt;/button&gt;
      &lt;/div&gt;
   &lt;/div&gt;
&lt;/div&gt;]]&gt;&lt;/template&gt;&lt;/sp_widget&gt;</payload>
